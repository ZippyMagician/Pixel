{
    "name": "pixeljs",
    "version": "1.5.2",
    "description": "A canvas api for making games or simple canvas drawing",
    "main": "src/index.js",
    "author": "Joshua Barnett",
    "scripts": {
        "test": "npm run docs && npm run docs:test && npm run lint",
        "build": "rollup -c",
        "docs": "jsdoc -c jsdoc.conf.json -R README.md",
