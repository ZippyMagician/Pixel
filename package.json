        "lint:fix": "eslint --fix src *.js"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.10.4",
        "@babel/core": "^7.0.0",
        "@pixi/jsdoc-template": "^2.6.0",
        "core-js": "^3.6.5",
        "docdash": "^1.2.0",
        "eslint": "^7.5.0",
        "eslint-plugin-jsdoc": "^30.0.3",
        "jsdoc": "^3.6.5",
        "rollup": "^2.23.0",
        "@rollup/plugin-babel": "^5.1.0",
        "rollup-plugin-terser": "^6.1.0",
        "@rollup/plugin-node-resolve": "^8.4.0"
    }
}
