{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": "error",
        "eqeqeq": "error",
        "curly": "warn",
        "quotes": ["error", "double"],
        "object-curly-spacing": ["error", "never", {
            "objectsInObjects": true,
            "arraysInObjects": false
        }],
        "space-in-parens": ["error", "never"],
        "array-bracket-spacing": ["error", "never"]
    }
}