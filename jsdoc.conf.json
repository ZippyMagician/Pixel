{
  "tags": {
    "allowUnknownTags": false
  },
  "source": {
    "include": "src",
    "excludePattern": "(node_modules|dist)"
  },
  "plugins": [
    "@pixi/jsdoc-template/plugins/es6-fix"
  ],
  "template": {
    "default": {
      "outputSourceFiles" : true
    },
    "cleverLinks": false,
    "monospaceLinks": false,
    "meta": {
      "title": "PixelJS Docs",
      "description": "Documentation for Pixel.JS",
      "keyword": "docs, documentation, pixel, pixeljs, renderer, html5, javascript, jsdoc"
    }
  },
  "opts": {
    "encoding"      : "utf8",
    "recurse"       : true,
    "lenient"       : true,
    "destination"   : "./docs",
    "template"      : "./node_modules/docdash"
  }
}
